<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.debttracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CurrentDebts"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:label="@string/title_activity_current_debts" >
        </activity>
        <activity
            android:name=".ListOfDebts"
            android:label="@string/title_activity_list_of_debts" >
        </activity>
        <activity
            android:name=".GenerateQR"
            android:label="@string/title_activity_generate_qr" >
        </activity>
        <activity
            android:name = "com.google.zxing.client.android.SCAN"
            android:label="lol"></activity>
    </application>

</manifest>
